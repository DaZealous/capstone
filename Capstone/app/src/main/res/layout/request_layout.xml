<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:padding="10dp"
    android:orientation="vertical"
	android:background="#ff00ff">
    <TextView 
		android:layout_centerHorizontal="true"
		android:textColor="#ffffff"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="User Display"
		android:textSize="20sp"
		android:id="@+id/request_layout_display"/>
	<TextView 
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/request_layout_display"
		android:textColor="#ffffff"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="User Name"
		android:textSize="15sp"
		android:id="@+id/request_layout_name"/>
	
	<de.hdodenhof.circleimageview.CircleImageView
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/img_request"
		android:layout_below="@+id/request_layout_name"
		android:layout_width="150dp"
		android:layout_height="150dp"
		android:layout_centerHorizontal="true"
		android:src="@drawable/businessman"
		app:civ_border_color="#ffffff"
		app:civ_border_width="1dp"/>
	<TextView 
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/img_request"
		android:textColor="#ffffff"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Request Status"
		android:textSize="15sp"
		android:id="@+id/request_status"/>
	<Button
		android:layout_below="@+id/request_status"
		android:layout_alignParentLeft="true"
		android:textColor="#ffffff"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Accept"
		android:id="@+id/request_accept_friend"/>
	<Button
		android:layout_below="@+id/request_status"
		android:layout_alignParentRight="true"
		android:textColor="#ffffff"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Decline"
		android:id="@+id/request_decline_friend"/>
	
</RelativeLayout>
