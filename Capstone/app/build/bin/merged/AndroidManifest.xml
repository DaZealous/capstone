            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="www.church.capstone.RegisterActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="www.church.capstone.register_activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="www.church.capstone.ProfileActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="www.church.capstone.profile_activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="www.church.capstone.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="www.church.capstone.login_activity" />

                <category android:name="android.intent.category.DEFAULT" />
