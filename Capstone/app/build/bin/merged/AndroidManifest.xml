            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="www.church.capstone.request_activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="www.church.capstone.FriendsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="www.church.capstone.friends_activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="www.church.capstone.ChatActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="www.church.capstone.chat_activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="www.church.capstone.com.squareup.picasso"
            android:exported="false" />
    </application>

</manifest>